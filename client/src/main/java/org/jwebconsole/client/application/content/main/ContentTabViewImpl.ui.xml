<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:tabs="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container">


    <ui:with field="messages" type="org.jwebconsole.client.bundle.messages.Messages"/>

    <ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig" field="overviewConfig">
        <ui:attributes text="{messages.tabOverviewHeaderText}"/>
    </ui:with>


    <ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig" field="threadsConfig">
        <ui:attributes text="{messages.tabThreadsHeaderText}"/>
    </ui:with>

    <ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig" field="vmSummaryConfig">
        <ui:attributes text="{messages.tabSummaryHeaderText}"/>
    </ui:with>

    <ui:with type="com.sencha.gxt.widget.core.client.TabItemConfig" field="memoryConfig">
        <ui:attributes text="{messages.tabMemoryHeaderText}"/>
    </ui:with>

    <container:VerticalLayoutContainer>
        <container:child>
            <tabs:TabPanel bodyBorder="true" ui:field="tabPanel">

            </tabs:TabPanel>
        </container:child>
        <container:child>
            <container:SimpleContainer ui:field="contentPanel">

            </container:SimpleContainer>
        </container:child>
    </container:VerticalLayoutContainer>

</ui:UiBinder>
