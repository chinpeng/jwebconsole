<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:tree="urn:import:com.sencha.gxt.widget.core.client.tree">

    <ui:with field="res" type="org.jwebconsole.client.bundle.AppResources"/>
    <ui:with field="messages" type="org.jwebconsole.client.bundle.messages.Messages"/>

    <ui:with type="com.sencha.gxt.data.shared.TreeStore" field="store" />
    <ui:with type="com.sencha.gxt.core.client.ValueProvider" field="valueProvider" />

    <g:HTMLPanel ui:field="main">
        <gxt:ContentPanel headingText="{messages.availableConnectionsHeader}" deferHeight="true" height="{res.availableHosts.windowHeight}">
            <tree:Tree ui:field="tree" valueProvider="{valueProvider}" store="{store}" />
        </gxt:ContentPanel>
    </g:HTMLPanel>
</ui:UiBinder>
