<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client">

    <gxt:FramedPanel headingText="Operating System Info">
        <g:VerticalPanel>
            <g:HorizontalPanel>
                <g:Label>Operating System:</g:Label>
                <g:Label ui:field="nameLabel"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label>Version:</g:Label>
                <g:Label ui:field="versionLabel"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label>Architecture:</g:Label>
                <g:Label ui:field="architectureLabel"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label>System Load Average:</g:Label>
                <g:Label ui:field="systemLoadAverageLabel"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label>Available Processors:</g:Label>
                <g:Label ui:field="availableProcessorsLabel"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label>Process CPU Time:</g:Label>
                <g:Label ui:field="processCPUTimeLabel"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label>Committed Virtual Memory Size:</g:Label>
                <g:Label ui:field="committedVirtualMemorySizeLabel"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label>Total Physical Memory Size:</g:Label>
                <g:Label ui:field="totalPhysicalMemorySizeLabel"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label>Free Physical Memory Size:</g:Label>
                <g:Label ui:field="freePhysicalMemorySizeLabel"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label>Total Swap Space Size:</g:Label>
                <g:Label ui:field="totalSwapSpaceSizeLabel"/>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Label>Free Swap Space Size:</g:Label>
                <g:Label ui:field="freeSwapSpaceSizeLabel"/>
            </g:HorizontalPanel>
        </g:VerticalPanel>
    </gxt:FramedPanel>
</ui:UiBinder>